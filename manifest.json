{
    "manifest_version": 3,
    "name": "AI Email Generator",
    "version": "1.1",
    "description": "Generate email drafts using OpenAI's API.",
    "permissions": ["storage"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "host_permissions": ["*://api.openai.com/*"]
  }
  